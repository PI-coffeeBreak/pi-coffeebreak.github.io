---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import Hero from '../components/Hero.astro'
import Download from '../components/Download.astro'
---

<DefaultLayout title="Home">
  <div class="py-10">
    <Hero />
    
    <div class="grid grid-cols-3 gap-10 mx-auto my-10">
      <div class="flex flex-col items-center text-center p-6 border-b-4 border-transparent hover:border-primary transition-all duration-300">
        <i class="fa-solid fa-puzzle-piece text-4xl text-primary mb-4"></i>
        <h1 class="text-xl font-bold text-gray-800">Modular Application</h1>
        <p class="text-gray-600 mt-2">You can have only the features you want.</p>
      </div>
      <div class="flex flex-col items-center text-center p-6 border-b-4 border-transparent hover:border-primary transition-all duration-300">
        <i class="fa-solid fa-layer-group text-4xl text-primary mb-4"></i>
        <h1 class="text-xl font-bold text-gray-800">Scalable System</h1>
        <p class="text-gray-600 mt-2">Easily expand your system as needed.</p>
      </div>
      <div class="flex flex-col items-center text-center p-6 border-b-4 border-transparent hover:border-primary transition-all duration-300">
        <i class="fa-solid fa-shield-alt text-4xl text-primary mb-4"></i>
        <h1 class="text-xl font-bold text-gray-800">Security First</h1>
        <p class="text-gray-600 mt-2">Your data and system remain protected.</p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center my-20">
      <div class="flex justify-center">
        <img src="../../public/conference.svg" class="ml-0 w-3/4 max-w-md" alt="Conference illustration">
      </div>
      <div class="flex flex-col w-full">
        <div class="join join-vertical w-full">
          <div class="collapse collapse-arrow join-item border-primary border-4 rounded-lg">
            <input type="radio" name="my-accordion-4" checked="checked" />
            <div class="collapse-title text-xl font-medium">Feature 1</div>
            <div class="collapse-content">
              <p>Description of feature 1.</p>
            </div>
          </div>
          <div class="collapse collapse-arrow join-item border-primary border-x-4 rounded-lg">
            <input type="radio" name="my-accordion-4" />
            <div class="collapse-title text-xl font-medium">Feature 2</div>
            <div class="collapse-content">
              <p>Description of feature 2.</p>
            </div>
          </div>
          <div class="collapse collapse-arrow join-item border-primary border-4 rounded-lg">
            <input type="radio" name="my-accordion-4" />
            <div class="collapse-title text-xl font-medium">Feature 3</div>
            <div class="collapse-content">
              <p>Description of feature 3.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="grid grid-cols-3 gap-6">
      <Download title="Meeting 1" description="First Meeting Minute" file_path="../../docs/minute1.pdf" />
      <Download title="Meeting 2" description="Second Meeting Minute" file_path="../../docs/minute2.pdf" />
      <Download title="Meeting 3" description="Third Meeting Minute" file_path="../../docs/minute3.pdf" />
    </div>
  </div>
</DefaultLayout>

